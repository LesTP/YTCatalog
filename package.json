{
  "name": "ytcatalog",
  "version": "1.0.0",
  "description": "A browser extension for organizing YouTube playlists into folders.",
  "scripts": {
    "build": "webpack --mode production --env browser=chrome",
    "build:chrome": "webpack --mode production --env browser=chrome",
    "build:firefox": "webpack --mode production --env browser=firefox",
    "watch": "webpack --mode development --watch --env browser=chrome",
    "watch:firefox": "webpack --mode development --watch --env browser=firefox",
    "dev": "web-ext run --source-dir ./dist/",
    "dev:firefox": "npm run build:firefox && web-ext run --source-dir ./dist/ --start-url https://www.youtube.com/feed/playlists",
    "dev:chrome": "echo 'Run npm run build:chrome, then load dist/ folder in chrome://extensions with Developer mode enabled'"
  },
  "keywords": ["youtube", "playlists", "browser-extension", "chrome-extension", "firefox-extension"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "web-ext": "^9.2.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}
